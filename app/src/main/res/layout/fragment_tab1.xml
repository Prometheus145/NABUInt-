<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".Tab1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/frameLayout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/button_personal_form"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/riskScoreTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:text="100"
        app:layout_constraintTop_toBottomOf="@+id/riskScoreLabel"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/riskScoreRefresh"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Refresh"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/riskScoreLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Your\nRisk Score:"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_height="5dp"
        android:layout_width="250dp"
        android:id="@+id/divider7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riskScoreTxt"
        android:layout_marginTop="28dp"
        android:background="?android:attr/listDivider"/>

    <View
        android:layout_height="240dp"
        android:layout_width="5dp"
        android:id="@+id/divider8"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toEndOf="@+id/riskScoreLabel"/>

</androidx.constraintlayout.widget.ConstraintLayout>